{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="row">
    {#Affichage d'un message flash#}
        {% for message in app.flashes('notice')%}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}

</div>
<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>C:/wamp64/www/FirstCrud/src/Controller/HomePageController.php</code></li>
        <li>Your template at <code>C:/wamp64/www/FirstCrud/templates/home_page/index.html.twig</code></li>
    </ul>
</div>
<div>
    <table class="table table-striped-columns">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            </tr>
        </thead>
    
        <tbody>
        {% for data in datas %}
            <tr>
                <th scope="row">{{data.id}}</th>
                <td>{{data.title}}</td>
                <td>{{data.content}}</td>
                <td>
                <a href="{{ path('update',{'id': data.id}) }}" class="btn btn-warning">Modifier</a>
                <a href="{{ path('delete',{'id': data.id}) }}" class="btn btn-danger">Supprimer</a>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 
</div>
{% endblock %}

